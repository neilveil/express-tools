{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    // "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    // "declarationDir": "types",
    // "emitDeclarationOnly": true,

    "rootDir": "./src",
    "outDir": "./build",
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"],
}
